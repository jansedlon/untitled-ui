{
    "$schema": "https://docs.rome.tools/schemas/12.1.0/schema.json",
    "formatter": {
        "enabled": true,
        "indentSize": 2
    },
    "linter": {
        "enabled": true,
        "rules": {
            "correctness": {
                "noUndeclaredVariables": "error",
                "noUnusedVariables": "error"
            },
            "nursery": {
                "noConsoleLog": "warn",
                "useGroupedTypeImport": "error"
            },
            "recommended": true,
            "style": {
                "noNonNullAssertion": "warn"
            }
        }
    },
    "organizeImports": {
        "enabled": true
    }
}